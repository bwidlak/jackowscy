#categories
  %ul.main_cat
    - @filter_main_categories.each do |category|
      %li{ :class => request.path =~ /kategorie\/#{category.permalink}/ ? "selected" : "not-selected" }
        = link_to category.name, category

  
  = form_for :category, :url => { :controller => "categories", :action => "dropdown_category"} do |f|
    %fieldset
      %legend Wybierz kategorie:
      = select_tag "category", options_for_select(@filter_sub_categories.map {|a| [a.name, a.permalink]}), :onchange => "this.form.submit();", :prompt => "Wszystkie kategorie"
  
