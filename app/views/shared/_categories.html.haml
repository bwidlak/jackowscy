#categories
  %ul.main_cat
    - @filter_main_categories.each do |category|
      %li{ :class => request.path =~ /kategorie\/#{category.permalink}/ ? "selected" : "not-selected" }
        = link_to category.name, category
  %ul.sub_cat
    - @filter_sub_categories.each do |category|
      %li{ :class => request.path =~ /kategorie\/#{category.permalink}/ ? "selected" : "not-selected" }
        = link_to category.name, category