%h2
  %span.label Nowe zdjęcie do projektu
  = @project.name

= simple_form_for(@image, :url => admin_project_images_path(@project)) do |f|
  = f.input :img_url, :hint => "exp. 'http://farm7.static.flickr.com/6240/6263037105_c4bec1d1b7.jpg' please do not add any hooks at the end of url."
  = f.input :status, :label => "Widoczny?"
  = f.button :submit, 'Zapisz nowe zdjęcie'