!!! 5
%html
  %header
  %title Jackowscy
  = stylesheet_link_tag "application"
  = javascript_include_tag "application"
  =# stylesheet_link_tag 'facebox'
  = csrf_meta_tags

  %body
    %nav
      %ul
        %li= link_to "Strona główna", root_path
        %li= link_to "Obrazy", projects_path
        %li= link_to "Wydarzenia"
        %li= link_to "Współpraca"
        %li= link_to "Kontakt"  
    %header
      #logo
        %h1= link_to "Jackowscy", root_path
    #user_nav
      -if user_signed_in?
        Signed in as
        = current_user.email
        = link_to 'Sign out', destroy_user_session_path, :method => :delete
      -else
        = link_to 'Sign in', new_user_session_path    
    %ul#menu
      %li= link_to "Home", root_path
      %li= link_to "Projects", projects_path
    -if user_signed_in?
      %ul#admin_menu
        %li= link_to "Authors", authors_path
        %li= link_to "Categories", categories_path
        
    = yield
  
    :javascript
      jQuery(document).ready(function($) {
        $('a[rel*=facebox]').facebox() 
      });