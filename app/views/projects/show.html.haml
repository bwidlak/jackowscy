- page_title @project.name
- content_for :aside do
  = render :partial => 'shared/categories'
  = render :partial => 'shared/authors'

#project_big
  .back
    = link_to 'Wróć', projects_path
  %figure.project_img
    = image_tag @image.large_url, :width => '758px', :border => '0', :alt => @project.name, :title => @project.name
  .details
    %p.title= @project.author.name
    %p.name= @project.name
    %p.categories
      Technika:
      - for category in @project.categories
        = category.name + ','
    %p.frame
      Rozmiar:
      = @project.size
    .price
      %p.text Kup obraz
      %p.value= number_to_currency @project.price

#other_projects
  %h3 Inne projekty tego autora
  = will_paginate @other_projects
  - @other_projects.each do |project|
    = render :partial => 'shared/project', :locals => { :project => project}
  = will_paginate @other_projects