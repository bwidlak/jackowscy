%h2 Listing projects
-if user_signed_in?
  = link_to 'New Project', new_project_path

= will_paginate @projects

- @projects.each do |project|
  %h3
    = project.id
    = link_to project.name, project
  %ul
    - unless project.images.blank?
      %li
        = image_tag(project.images.first.img_url, :size => '75x75', :alt => 'project.name')
    %li
      %b Description
      = project.description
    %li
      %b Frame size:
      = project.size
    %li
      %b Price
      = project.price
    %li
      %b Status:
      = project.status
    %li
      %b Home:
      = project.home
    %li
      %b Author:
      = project.author.name
    %li
      = link_to 'Edit', edit_project_path(project)
      |
      = link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete
  %hr/

= will_paginate @projects

%br/
